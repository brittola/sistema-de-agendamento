        <input id="inCpf" type="text" name="cpf" placeholder="CPF do paciente" class="form-control mb-3">
        <input id="inDesc" type="text" name="description" placeholder="DescriÃ§Ã£o" class="form-control mb-3">
        <input id="inDate" type="date" name="date" placeholder="" class="form-control mb-3">
        <input id="inTime" type="time" name="time" placeholder="" class="form-control mb-3">
        <button class="btn btn-success w-100">Cadastrar</button>
    </form>
    </main>

