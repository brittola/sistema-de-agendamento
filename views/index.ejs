<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consultas</title>
    <!-- CSS e Script do FullCalendar -->
    <link rel="stylesheet" href="main.css">
    <script src="main.js"></script>
</head>
<body>
    <div id="calendar" style="margin: 0 auto; max-width: 1200px;"></div>

    <script>
        const element = document.getElementById('calendar');
        const calendar = new FullCalendar.Calendar(element, {
            initialView: 'dayGridMonth',
            locale: 'pt-br',
            events: 'appointments', // rota de appointments
            eventClick: function(info) {
                location.href = '/event/' + info.event.id; // indo para rota de detalhamento
            }
        });

        calendar.render();
    </script>
</body>
</html>